{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es2022", 
    "module": "es2022",
    "outDir": "dist/mjs/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "incremental": true
  },
  "include": ["src/**/*"]
}
